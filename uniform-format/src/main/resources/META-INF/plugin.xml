<!-- 插件配置文件。更多信息：https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- 插件的唯一标识符。应该是完全限定名。在插件版本之间不能更改。 -->
    <id>dev.dong4j.zeka.stack.idea.plugin.uniform.format</id>

    <!-- 公共插件名称应使用标题大小写书写。
         指南：https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Uniform Format</name>

    <!-- 在插件页面上显示的供应商名称或组织ID。 -->
    <vendor email="dong4j@gmail.com">Zeka Stack</vendor>

    <!-- 在插件页面和IDE插件管理器中显示的插件描述。
         可以在 <![CDATA[ ]]> 标签内添加简单的HTML元素（文本格式、段落和列表）。
         指南：https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
        <h2>Uniform Format</h2>
        <p>统一的代码格式化和模板管理插件，提供标准化的代码风格配置、文件模板和 Live Template。</p>

        <h3>功能特性</h3>
        <ul>
            <li><b>文件模板</b>：自动添加统一的文件头部注释</li>
            <li><b>Live Template</b>：快速生成常用代码片段</li>
            <li><b>代码风格</b>：自动配置统一的代码格式化规则</li>
            <li><b>使用统计</b>：统计模板使用情况</li>
        </ul>

        <h3>Live Template 功能</h3>
        <ul>
            <li>todo-xxx：标记待处理的地方</li>
            <li>fixme-xxx：标记需要修复的地方</li>
            <li>cd：生成 class javadoc</li>
            <li>li/ld/lw/le：快速生成日志语句</li>
            <li>test：快速生成单元测试方法</li>
        </ul>

        <h3>配置说明</h3>
        <p>插件安装后会自动配置代码风格和模板，无需额外设置。</p>
    ]]></description>

    <!-- 产品和插件兼容性要求。
         更多信息：https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <idea-version since-build="223" until-build="999.*"/>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- 国际化资源文件 -->
    <resource-bundle>messages</resource-bundle>

    <!-- 插件定义的扩展点。
         更多信息：https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- 配置持久化 -->
        <applicationService serviceImplementation="dev.dong4j.zeka.stack.idea.plugin.uniform.format.settings.UniformFormatSettingsState"/>

        <!-- 设置面板 -->
        <!--<projectConfigurable-->
        <!--        parentId="tools"-->
        <!--        instance="dev.dong4j.zeka.stack.idea.plugin.uniform.format.settings.UniformFormatSettingsConfigurable"-->
        <!--        id="dev.dong4j.zeka.stack.idea.plugin.uniform.format.settings.UniformFormatSettingsConfigurable"-->
        <!--        displayName="Uniform Format"/>-->

        <!-- 通知组 -->
        <notificationGroup id="Uniform Format Notifications"
                           displayType="BALLOON"
                           isLogByDefault="true"/>

        <!-- Live Template 支持 -->
        <defaultLiveTemplates file="liveTemplates/uniform-live-template.xml"/>
        <liveTemplateContext implementation="dev.dong4j.zeka.stack.idea.plugin.uniform.format.template.live.UniformLiveTemplateContext"
                             contextId="zeka.stack"/>

        <!-- Startup Activities -->
        <postStartupActivity implementation="dev.dong4j.zeka.stack.idea.plugin.uniform.format.codestyle.UniformCodeStyleHandler"/>
        <postStartupActivity implementation="dev.dong4j.zeka.stack.idea.plugin.uniform.format.template.file.UniformFileTemplatesHandler"/>

    </extensions>
</idea-plugin>
